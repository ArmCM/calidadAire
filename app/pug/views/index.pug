    .loader
  #videoBlock.cabezera
    video#video(preload='preload', autoplay='autoplay', loop='loop', playsinline='', muted='', poster='imagenes/back.jpg')
      source(src='imagenes/nubes.mp4', type='video/mp4')
    .section.no-pad-bot.move-up
      .container
        .row
          .col-xs-12.text-center
            h2 Calidad del Aire
            p
              strong
                i Selecciona tu estado y estación para obtener información
        .row
          .col-xs-12.text-center.margen_arriba_g
